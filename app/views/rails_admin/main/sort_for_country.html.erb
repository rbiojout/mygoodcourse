<!-- we have Cycles associated to Country -->
<% @cycles = @object.cycles %>

<h3><%= (I18n.translate 'activerecord.models.cycle', count: 2).capitalize %></h3>
<ol id="cycles_sortable" class="list-group sortable" data-update-url="/cycles/sort">
  <% @cycles.each do |cycle| %>

      <li class="list-group-item" id="cycle_<%=cycle.id%>">
        <%= link_to '#', class: "btn btn-success" do %>
            <span class="fa fa-sort handle"> move</span>
        <% end %>
        <%= cycle.name %>
      </li>
  <% end %>
</ol>

