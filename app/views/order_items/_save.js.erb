$("ul.errors").html("")
<% if @order_item.errors.any? %>
  <% @order_item.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>

<% logger.debug("=====> @order_items #{@order_items}") %>

  $(".orderitem-index").html("<%= escape_javascript(render(partial: 'order_item', collection: @order_items)) %>")
  // update the summary of the cart
  $("#cart_summary").html("<%= escape_javascript(render 'layouts/cart_summary') %>")
  $("#orderitem-modal").modal("hide")
<% end %>