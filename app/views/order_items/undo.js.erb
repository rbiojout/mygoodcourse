$('#order_item_undo_<%=@order_item.product.id%>').fadeOut();

$('#order_items_index').prepend("<%= escape_javascript(render('order_items/order_item', order_item: @order_item)) %>")

// first we need to hide before to show
$('#order_item_<%= @order_item.id %>').focus();
$('#order_item_<%= @order_item.id %>').hide();
$('#order_item_<%= @order_item.id %>').show(400);


// update the summary of the cart
$("#cart_summary").html("<%= escape_javascript(render 'layouts/cart_summary') %>")
$("#orderitem-modal").modal("hide")