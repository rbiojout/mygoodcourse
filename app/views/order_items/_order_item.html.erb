<% with_header ||= false %>
<% #https://addstar34.github.io/2016/01/13/the-secret-to-easy-nested-content-tags.html %>



<div class="row" id="order_item_<%=order_item.id%>">
  <div class="col-xs-2 picture_part">
    <%= image_tag order_item.product.preview, class: 'img-thumbnail center-block' %>
  </div>
  <div class="col-xs-6 description_part">
    <h4><%= order_item.product.name %></h4>
    <div class="pull-right">
      <%= render :partial =>"comments/show_stars", :locals => {:score => order_item.product.score_comments, :nb_comments => order_item.product.nb_comments, :simple => true} %>
    </div>
    <small><%= order_item.product.customer.first_name %> <%= order_item.product.customer.name %></small>

  </div>
  <div class="col-xs-4 price_part">
    <h4><%= nice_price(order_item.product.price) %></h4>
    <%= link_to t('dialog.shop.remove_cart'), order_item, remote: true, method: :delete, dataconfirm: {confirm: "Remove from Cart: #{order_item.product.name}"}, class: "btn btn-danger" %>
  </div>
</div>