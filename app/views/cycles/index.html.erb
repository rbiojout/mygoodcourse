<h1>Listing Cycles</h1>


  <div id="cycles_sortable" class="sortable" data-update-url="<%= sort_cycles_path %>">
    <% @cycles.each do |cycle| %>

    <div class="panel panel-default" id="cycle_<%=cycle.id%>">
      <%= link_to '#' do %>
        <li class="btn btn-success glyphicon glyphicon-sort handle">move</li>
        <% end %>
    <%= cycle.name %>
      <div class="btn-group pull-right">
    <%= link_to 'Show', cycle, class: "btn btn-default active" %>
    <%= link_to 'Edit', edit_cycle_path(cycle), class: "btn btn-default" %>
    <%= link_to 'Destroy', cycle, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
      </div>
        </div>
        <% end %>

    <%= link_to 'New Cycle', new_cycle_path, class: 'btn btn-primary' %>
  </div>



