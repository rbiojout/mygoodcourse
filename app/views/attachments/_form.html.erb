<%= simple_form_for(@attachment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :file %>
    <%= f.input :file_name %>
    <%= f.input :file_size %>
    <%= f.input :file_type %>
    <%= f.input :nbpages %>
    <%= f.input :version_number %>
    <%= f.input :active %>
    <%= f.input :preview %>
    <%= f.association :product %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
