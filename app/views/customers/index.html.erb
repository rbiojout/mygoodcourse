<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>First name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Picture</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.mobile %></td>
        <td><%= customer.picture %></td>
        <td>
          <div class="btn-group pull-right">
            <%= link_to 'Show', customer, class: "btn btn-default active" %>
            <%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-default" %>
            <%= link_to 'Destroy', customer, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul>
<%= render(partial: 'customers/customer', collection: @customers) %>
</ul>
<%= link_to 'New Customer', new_customer_path %>
