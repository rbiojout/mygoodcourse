<h2><%= t('.change_your_password') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.input :reset_password_token, :as => :hidden %>

    <%= f.input :password, :as => :password, :label => t('.new_password'), autofocus: true, autocomplete: 'off', :hint =>  ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, :label => t('.confirm_new_password'), :as => :password, autocomplete: 'off', :hint => 'Confirm new password' %>


    <div class="actions">
      <%= f.submit t('.change_my_password'), class: 'btn btn-primary input-block-level form-control' %>
    </div>
<% end %>

<%= render 'customers/shared/links' %>
