<h2><%= t('.forgot_your_password') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :email, :as => :email, autofocus: true %>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary input-block-level form-control' %>
  </div>
<% end %>

<%= render 'customers/shared/links' %>
