<h1>Sign up</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.input :name %>
      <%= f.input :first_name %>
      <%= f.input :mobile %>

      <%= f.input :picture, :as => :image_preview %>

      <%= f.input :formatted_address, :input_html => {:geocoding => 'formatted_address', class: 'geocoding_fulladdress'}, class: 'geocoding_fulladdress' %>
      <div class="geo-details">
        <%= f.input :street_address, as: :hidden, :input_html => {:geocoding => 'name'} %>
        <%= f.input :administrative_area_level_1, as: :hidden, :input_html => {:geocoding => 'administrative_area_level_1'} %>
        <%= f.input :administrative_area_level_2, as: :hidden, :input_html => {:geocoding => 'administrative_area_level_2'} %>
        <%= f.input :postal_code, as: :hidden, :input_html => {:geocoding => 'postal_code'} %>
        <%= f.input :locality, as: :hidden, :input_html => {:geocoding => 'locality'} %>
        <%= f.input :lat, as: :hidden, :input_html => {:geocoding => 'lat'} %>
        <%= f.input :lng, as: :hidden, :input_html => {:geocoding => 'lng'} %>
      </div>

      </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
<% end %>


<%= render "customers/shared/links" %>



