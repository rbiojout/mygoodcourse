<div class="row">
  <div class="col-sm-3">
    <%= render('customers/customer', :customer => @customer, :withcols => 'false' ) %>

    <ul class="nav nav-pills nav-stacked">
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.profile'), customer_path(@customer) %></li>
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.wishes'), wish_list_customer_path %></li>
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.followers'), circle_customer_path(@customer) %></li>
      <li role="presentation" class="active"><%= link_to t('activerecord.attributes.customer.comments'), comments_list_customer_path(@customer) %></li>
    </ul>


  </div>
  <div class="col-sm-9">
    <h1><%= t('activerecord.attributes.customer.comments') %></h1>
    <% if @comments.count ==0 %>
        <%= render(partial: 'shared/dialog_alert', locals: {alert_message: t('dialog.customer.alert_no_comments')}) %>
    <% else %>
        <% @comments.each do |comment| %>
            <%= render(partial:'comments/comment_product', locals: {comment: comment}) %>
        <% end %>
    <% end %>

  </div>
</div>

