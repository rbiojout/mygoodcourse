<% withcols ||= 'true' %>
<% customer ||= @customer %>




<div style="clear: both; width: 80px" class="relative" >
  <img class="img-circle customer-picture img-80"
       data-customer="<%=customer.id %>"
       data-locality=  "<%= t('activerecord.attributes.customer.located', :locality => customer.locality.presence||'???') %>"
       data-created="<%=t('activerecord.attributes.customer.since', :created => l(customer.created_at, :format => :short) )%>"
       alt="" src="<%= customer.picture %>" >
  <span class="btn-top-right">
    <!-- follow -->
    <% if customer_signed_in? %>
      <% if current_customer.id != customer.id %>
      <div class="follow_form follow_form_<%= customer.id%>" id="follow_form_<%= customer.id%>">
        <% if current_customer.following?(customer) %>
            <%= render(partial: 'peers/unfollow',  locals: {:followed => customer, locale: locale} ) %>
        <% else %>
            <%= render(partial: 'peers/follow',  locals: {:followed => customer, locale: locale})  %>
        <% end %>
      </div>
      <!-- if customer is signed, direct link to his profile -->
      <% else %>
          <%= link_to(customer_path(customer), class: 'btn btn-default btn-sm', alt: t('page.my_profile'), title: t('page.my_profile') )  do %><i class="fa fa-pencil fa-lg" aria-hidden="true"></i><% end %>
      <% end %>

    <% else %>
    <% end %>
    <!-- end follow -->
  </span>
</div>
      <!--- stars --->
    <div>
        <%= render :partial =>"reviews/show_stars", :locals => {:score => customer.score_reviews, :nb_reviews => customer.nb_reviews,:simple => true} %>
    </div>
    <!--- end stars --->
<!--- name --->
<div>
  <p><%= link_to "#{customer.first_name} #{customer.name}", customer_path(customer) %></p>
</div>
