<div class="row">
  <div class="col-md-3">
      <%= render('customers/customer', :customer => @customer, :withcols => 'false' ) %>

    <ul class="nav nav-pills nav-stacked">
      <li role="presentation" class="active"><a href='#'><%= t('activerecord.attributes.customer.profile') %></a></li>
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.wishes'), wish_list_customer_path %></li>
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.followers'), circle_customer_path(@customer) %></li>
    </ul>


  </div>
  <div class="col-md-9">
    <h1><%= t('activerecord.attributes.customer.profile') %>
      <!--- list of actions --->
      <% if (customer_signed_in? && current_customer.id == @customer.id) %>
            <%= link_to(t('actions.update'), edit_customer_path(current_customer), class: 'btn btn-default btn-sm' ) %>
      <% end %>
      <!--- end list of actions --->
    </h1>
    <blockquote>
      <%= raw(@customer.description) %>
    </blockquote>
    <h3><%= (I18n.translate 'activerecord.models.product', count: 2).capitalize %></h3>
      <div class="row">
        <% @customer.products.active.each do |product| %>
            <%= render "products/product", :product => product %>
        <% end %>
      </div>
    </div>
</div>

