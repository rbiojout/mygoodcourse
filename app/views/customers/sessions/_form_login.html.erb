
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :remote => 'true', :html => { :role => "form", 'data-model' => 'customer' }) do |f| %>
    <div id="error_explanation" class="bg-danger text-danger">
      <%= devise_error_messages! %>
      <% if @customer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

            <ul>
              <% @customer.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

    </div>

    <div class="form-group">
      <%= f.label :email, :class => "control-label" %>
      <%= f.text_field :email, :class => "form-control" %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => "control-label" %>
      <%= f.password_field :password, :class => "form-control" %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label :remember_me, :class => "control-label" %>
      <%= f.check_box :remember_me, :class => "form-control" %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.submit  "Sign In", class: 'btn btn-primary input-block-level form-control' %>
    </div>


<% end %>