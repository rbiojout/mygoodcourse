<div class="customer_presentation" id="customer_presentation_<%= customer.id%>">
  <img class="media-object img-circle customer-picture" data-customer="<%=customer.id %>" data-locality="<%=customer.locality||'Secret'%>" data-created="<%=customer.created_at.strftime("%D")%>" alt="" src="<%= customer.picture %>" style="width:80px;">
  <h3 class="media-heading"><%= customer.first_name %> <%= customer.name %></h3>
  <% #@TODO follow me %>
  <% if customer_signed_in? %>
      <h5>
      <div class="follow_form" id="follow_form_<%= customer.id%>">
        <% if current_customer.following?(customer) %>
            <%= link_to "Unfollow", unfollow_peer_path(followed_id: customer.id), method: :delete, remote: true %>
        <% else %>
            <%= link_to "Follow", follow_peer_path(followed_id: customer.id), method: :post, remote: true  %>
        <% end %>
      </div>
      </h5>
  <% end %>

  <%= customer.locality||' '+' ' %>
  since <%= content_tag('small', nice_date(customer.created_at), :class => 'small') %>
  <% #@TODO stars %>
  stars
</div>