<div class="row">
  <div class="col-sm-3">
    <%= render('customers/customer_picture', :customer => @customer, :withcols => 'false' ) %>
    <div class="clearfix"></div>
    <ul class="nav nav-pills nav-stacked">
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.profile'), customer_path(@customer) %></li>
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.wishes'), wish_list_customer_path %></li>
      <li role="presentation"><%= link_to t('activerecord.attributes.customer.followers'), circle_customer_path(@customer) %></li>
      <li role="presentation" class="active"><%= link_to t('activerecord.attributes.customer.reviews'), reviews_list_customer_path(@customer) %></li>
    </ul>


  </div>
  <div class="col-sm-9">
    <h2><%= t('activerecord.attributes.customer.reviews') %></h2>
    <% if @reviews.count ==0 %>
        <%= render(partial: 'shared/dialog_alert', locals: {alert_message: t('dialog.customer.alert_no_reviews')}) %>
    <% else %>
        <% @reviews.each do |review| %>
            <%= render(partial:'reviews/review_product', locals: {review: review}) %>
        <% end %>
    <% end %>

  </div>
</div>

