<% provide(:title, @forum_family.name) %>


<!-- Image Header -->
<% content_for :slider do %>
    <div class="img-header parallaxed banner bg-inverse" data-stellar-background-ratio="0.5">
      <div class="bottom-caption">
        <div class="container">
          <h1><%= yield :title %></h1>
        </div>
      </div>
    </div>
<% end %>
<!-- /.row -->

<script language="JavaScript">
    $('.banner').css('background-image', 'url(<%= @forum_family.visual %>)');
</script>

<ol class="breadcrumb">
  <li>
    <%= link_to forum_families_path do %>
        <span class="fa fa-home fa-lg"></span> <%= t('page.forum') %>
    <% end %>
  </li>
</ol>

<ul class="media-list">
<%= render(partial: 'forum_families/forum_family', locals: {forum_family: @forum_family}) %>
</ul>
