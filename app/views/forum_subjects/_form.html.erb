<%= simple_form_for(@forum_subject) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :text, as: 'text', :input_html => {:class => 'summernote'}  %>
    <%= f.association :customer, as: 'hidden' %>
    <%= f.association :forum_category, as: 'hidden' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
