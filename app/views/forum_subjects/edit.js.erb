
$('.forum_subject_<%= @forum_subject.id%>').html("<%= j (render 'forum_subjects/form_ajax') %>");

// activate the editor
$('form[data-model="forum_subject"] .summernote').summernote({
    lang: I18n_locale,
    // adjust initial height for the Summernote Editor
