<% provide(:title, (I18n.translate 'activerecord.models.country', count: 2).capitalize) %>


<h1><%= (I18n.translate 'activerecord.models.country', count: 2).capitalize %></h1>

<ul>
  <% @countries.each do |country| %>
    <li>
      <%= link_to country.name, country_path(country) %>
    </li>
  <% end %>

</ul>
