<%
# context : parameter to refer to the polymorphic
   context_type = context.class.name.downcase
   context_param = context.class.name.downcase + "_id"
   context_value = context.id
%>
<div id=<%="like_#{context_type}_#{context_value}"%> >
    <%= link_to(unlike_like_path(context_param => context_value), alt: 'Unlike', method: :delete, remote: true ) do %>

        <i class="fa fa-thumbs-down"> </i>
    <% end %>
  <%= context.likes.size unless context.likes.size ==0 %>
</div>