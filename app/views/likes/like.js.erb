<%
   # context : parameter to refer to the polymorphic
   context_type = @context.class.name.underscore
   context_value = @context.id
%>

// replace the like to unlike
$('.<%="like_#{context_type}_#{context_value}"%>').replaceWith("<%= escape_javascript(render(partial: 'likes/unlike',  locals: {context: @like.likeable, locale: locale})) %>");



