<%= simple_form_for(@forum_answer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :text, as: 'text', :input_html => {:class => 'summernote'}  %>
    <%= f.association :customer, as: 'hidden' %>
    <%= f.association :forum_subject, as: 'hidden' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
