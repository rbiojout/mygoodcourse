<% provide(:title, (I18n.translate 'activerecord.models.article', count: 2).capitalize) %>


<h1><%= (I18n.translate 'activerecord.models.article', count: 2).capitalize %></h1>

<div class="row">
  <div class="col-md-4">
    <!-- country selector -->
    <div class="row">
      <div class="col-xs-12" style="padding-bottom: 10px;">
        <%= render(partial: 'countries/btn_countries') %>
      </div>
    </div>
    <!-- end country selector -->

    <!-- list of topics -->
    <%= render(partial: 'articles/topics', :current_topic => @topic) %>
    <!-- end list of topics -->
    <hr/>
  </div>
  <div class="col-md-8">
    <h3>
      <span class="fa-stack">
          <i class="fa fa-circle fa-stack-2x"></i>
          <i class="fa fa-file-text fa-stack-1x fa-inverse"></i>
      </span>
      <%= @topic.name %>
    </h3>
    <ul class="list-unstyled">
      <% @articles.each do |article|%>
          <%= render(partial: 'articles/article_truncated', :locals => {article: article}) %>
      <% end %>
    </ul>
  </div>
</div>


