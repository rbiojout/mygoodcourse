<% provide(:title, @article.name) %>


<h1><%= yield :title %></h1>

<%= link_to @article.topic.name, topic_articles_path(topic_id: @article.topic_id, locale: locale), class: 'btn btn-primary' %>

<ul class="list-unstyled">
  <%= render(partial: 'articles/article', :locals => {article: @article}) %>
</ul>

