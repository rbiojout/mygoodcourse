$(document).ready(function() {
    $(".follow_form_<%= @followed.id%>").html("<%= escape_javascript(render(partial: 'unfollow',  locals: {:followed => @followed, locale: locale})) %>")

// first we need to hide before to show
    $('.customer_presentation_<%= @followed.id %>').focus();
    $('.customer_presentation_<%= @followed.id %>').hide();
    $('.customer_presentation_<%= @followed.id %>').fadeIn(300);

    // we add the new follower to the list of the followed
    $('#follower-list_<%= @followed.id%>').prepend("<%= j render partial: 'customers/customer', locals: {customer: current_customer}  %>");
    //$('.customer_presentation_<%= current_customer.id%>').hide();
    //$('.customer_presentation_<%= current_customer.id%>').fadeIn(900);
});