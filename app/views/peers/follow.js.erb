$(document).ready(function() {
    $(".follow_form_<%= @customer.id%>").html("<%= escape_javascript(link_to(t('activerecord.attributes.peers.unfollow'), unfollow_peer_path(followed_id: @customer.id), method: :delete, remote: true )) %>")

// first we need to hide before to show
    $('.customer_presentation_<%= @customer.id %>').focus();
    $('.customer_presentation_<%= @customer.id %>').hide();
    $('.customer_presentation_<%= @customer.id %>').fadeIn(900);

});