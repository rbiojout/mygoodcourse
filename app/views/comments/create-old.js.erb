$('#comment_table').prepend("<%= j render partial: 'comments/comment', locals: {comment: @comment}  %>");

// we update the associated informations
$('#nb_comments').html("<%= @comment.product.nb_comments %>");
$('#product_score').html("<%= j render partial: 'comments/show_stars', locals: {:score => @comment.product.score_comments } %>");


// close the modal
$('#dialog').modal_success();

// first we need to hide before to show
$('#current_comment').focus();
$('#current_comment').hide();
$('#current_comment').show(600);



