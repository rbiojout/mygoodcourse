<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :text %>
    <%= tag(:input, name: @context.class.to_s.underscore+'_id', type: 'hidden', value: @context.id)%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
