
<h1>Listing Products</h1>


<table class ='table'>
  <thead>
    <tr>
      <th><%= sortable_bootstrap "name" %></th>
      <th><%= sortable_bootstrap "created_at", 'Creation date' %></th>
      <th><%= sortable_bootstrap "sku", 'Unique SKU' %></th>
      <th>Permalink</th>
      <th>Short description</th>
      <th><%= sortable_bootstrap "active", 'Active' %></th>
      <th><%= sortable_bootstrap "price", 'Price' %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.created_at.to_date %></td>
        <td><%= product.sku %></td>
        <td><%= product.permalink %></td>
        <td><%= product.short_description.html_safe %></td>
        <td><%= product.active %></td>
        <td><%= product.price %></td>
        <td><%= link_to "Add", buy_product_path(product), :class => 'add', :method => :post %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
