<h1><%= t('helpers.action.product.edit') %></h1>

<!--- Country selector --->
<div class="">
  <%= form_tag(edit_product_path(@product), method: :get, class: "simple_form")  do  %>
      <%= select_tag('country_id', options_from_collection_for_select(Country.all,"id", "name", session[:current_country_id] ), class: "select optional form-control", :onchange => "this.form.submit()") %>
  <% end %>
</div>
