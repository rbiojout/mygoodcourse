<div class="row">
  <div class="col-xs-4">
    <p>
      <%= image_tag @product.preview, class: 'img-thumbnail' %>
    </p>
  </div>
  <div class="col-xs-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @product.name %></h3>
        <div class="product-labels">
          <span class="label label-info">new</span>
          <span class="label label-danger">sale</span>
        </div>
        <div id="product_score">
          <%= render "comments/show_stars", :score => @product.score_comments %>
        </div>      </div>
      <div class="panel-body">
        <h4 class="pull-right"><%= number_to_currency(@product.price, precision: 2)||"Free" %></h4>
          <span>nb pages:</span> <%= @product.nbpages %>
      </div>
      <div class="panel-body">
        Categories:
        <% @product.categories.each do |category| %>
            <%= link_to catalog_products_path(category_id: category.id) do%><span class="label label-default"><%= category.name %></span><% end %>

        <% end %>
        <br/>

        Levels:
        <% @product.levels.each do |level| %>
            <%= link_to catalog_products_path(level_id: level.id) do%><span class="label label-default"><%= level.name %></span><% end %>

        <% end %>
      </div>
      <div class="panel-footer">
        <!--- list of actions --->
        <p>
          <% if customer_signed_in? && current_customer.own_product(@product) %>
              <%= link_to 'Edit', edit_product_path(@product), class:'btn btn-primary' %>
          <% else %>
              <%= link_to buy_product_path(@product), :method => :post, class:'btn btn-primary' do %><i class="fa fa-shopping-cart"></i> Add to cart<% end %>
          <% end %>
        </p>
      </div>
    </div>
    <ul class="list-inline product-links">
      <li><a href="#"><i class="fa fa-heart"></i> Add to wishlist</a></li>
      <li><a href="#"><i class="fa fa-exchange"></i> Compare</a></li>
      <li><a href="#"><i class="fa fa-envelope"></i> Email to friend</a></li>
    </ul>

  </div>
</div>

<div class="tabs product-tabs">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#description" role="tab" data-toggle="tab" aria-controls="description" aria-expanded="true">Description</a></li>
    <li role="presentation" class=""><a href="#reviews" role="tab" data-toggle="tab" aria-controls="reviews" aria-expanded="false">Reviews <span id="nb_comments" class="badge"><%= @product.nb_comments||0  %></span></a></li>
    <li role="presentation" class=""><a href="#video" role="tab" data-toggle="tab" aria-controls="video" aria-expanded="false">Responsive Video</a></li>
  </ul>
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active in" id="description">
      <p><%= @product.description.html_safe %></p>
    </div>
    <div role="tabpanel" class="tab-pane" id="reviews">

    <hr>
      <% if customer_signed_in? %>
        <%= link_to 'add comment', new_comment_path(product_id: @product.id), remote: true, class: 'btn btn-primary' %>
      <% else %>
          <%= link_to 'You must log in to add a comment', new_customer_session_path(:redirect_to => product_path(id: @product.id)), class: 'btn btn-primary' %>
      <% end %>
    <hr>

      <div id="comment_table" class="comments">
        <div id="comment-form" style="display:none;"></div>
        <% @comments.each do |comment| %>
            <%# Render table row partial for each person object %>
            <%= render partial: 'comments/comment', locals: {comment: comment} %>
        <% end %>

      </div>

      <div id="infinite-scrolling-comments" class="row">
        <%= will_paginate(@comments, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>
      </div>

      <a class="btn btn-primary" data-toggle="modal" data-target="#addReview">Add Review</a>
      <a class="btn btn-primary" data-toggle="modal" data-target="#addReview">Add Review</a>


    </div>
    <div role="tabpanel" class="tab-pane" id="video">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe allowfullscreen="" src="http://www.youtube.com/embed/M4z90wlwYs8?feature=player_detailpage"></iframe>
      </div>
    </div>
  </div>
</div>












