<div class="col-xs-6 col-sm-4 col-lg-4 col-md-4 panel-product">
  <!-- picture -->
  <div class="row">
  <div class="hovereffect center-block panel-image-product">
    <%= link_to product_path(product.id) do %>
        <% if product.preview.nil? %>
            <%= image_tag "product.preview", class: 'img-thumbnail center-block' %>
        <% else %>
            <%= image_tag product.preview, class: 'img-thumbnail center-block' %>
        <% end %>
    <% end %>
  </div>
  </div>
  <!-- end picture -->
  <!--- price --->
  <div class="pull-right">
    <h4><%= number_to_currency(product.price, precision: 2)||"Free" %></h4>
  </div>
  <!--- end price --->

  <!--- name --->
  <div class="two_lines ellipsis">
    <h4><%= link_to product.name, product_path(product.id) %></h4>
  </div>
  <!--- end name --->

  <!--- stars --->
    <%= render :partial =>"comments/show_stars", :locals => {:score => product.score_comments, :nb_comments => product.nb_comments,:simple => true} %>
  <!--- end stars --->
 <p class="two_lines"></p>


</div>