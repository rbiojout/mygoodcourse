<% page_title= t('page.my_products') %>



<h1><%= t('page.my_products') %></h1>

<table class='table'>
  <thead>
  <tr>
    <th><%= sortable_bootstrap 'name', t('activerecord.attributes.product.name') %></th>
    <th><%= sortable_bootstrap 'active', t('activerecord.attributes.product.active') %></th>
    <th><%= sortable_bootstrap 'price', t('activerecord.attributes.product.price') %></th>
    <th><%= sortable_bootstrap 'price', t('activerecord.attributes.creation_date') %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.active %></td>
        <td><%= nice_price(product.price) %></td>
        <td><%= nice_date(product.created_at) %></td>
        <td>
          <div class="btn-group pull-right">
            <%= link_to 'Show', product, class: "btn btn-default active" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %>
            <%= link_to 'Destroy', product, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate(@products, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>



<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
