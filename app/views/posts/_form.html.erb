
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :visual, :as => :visual_preview, :input_html =>{:preview_version => 'preview'} %>
    <%= f.input :description, as: 'text', :input_html => {:class => 'summernote'} %>
    <%= f.input :customer_id, as: 'hidden' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
